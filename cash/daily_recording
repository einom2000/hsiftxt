import time
import re
import easyquotation
import pandas as pd
import xlsxwriter

quotation = easyquotation.use('sina') # 新浪 ['sina'] 腾讯 ['tencent', 'qq']


today = time.localtime()
timestamp = time.strftime('%b-%d-%Y', today)
print(timestamp)

file_path = 'C:\\new_ajzq_v6\\T0002\\blocknew\\'
block_name = timestamp + '-in-pool.blk'
with open(file_path + block_name, 'r') as daily_block:
    tmp_list = re.findall(r'\d+', daily_block.read())

daily_to_buy_list = []
for i in range(1):
    daily_to_buy_list.append(tmp_list[i][1:])

print(quotation.stocks(daily_to_buy_list))
